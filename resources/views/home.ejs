    <section class="title">
        <div class="container mx-auto flex justify-between items-center py-16">
            <div class="w-1/2 container">
                <h6 class="text-lg"><em>Are you hungry?</em></h6>
                <h1 class="text-6xl font-bold mx-auto">Don't wait!</h1>
                <button class="btn-primary px-2 py-2 text-white font-bold mt-7 rounded-full">Order Now</button>
            </div>
            <div class="w-1/2">
                <img class="mx-auto" src="/img/pizza.png" alt="pizza image">
            </div>
        </div>
    </section>

    <section class="memu container mx-auto">
        <h1 class="text-xl font-bold mt-8 mb-8">ALL PIZZA</h1>

        <div class="grid grid-cols-4 gap-9">

            <%pizzas.forEach((pizza)=>{ %>

            <div class="item ">
                <img class="h-40 mx-auto" src="/img/<%= pizza.image %>" alt="">
            <div class="item-details text-center">
                <h1 class=" mt-4 w-40 text-lg font-bold"><%= pizza.name %></h1>
                <span class="size py-1 px-4 text-xs uppercase rounded-full"><%= pizza.size %></span>
                <div class=" flex justify-between py-5 items-center">
                    <span class="ml-5 font-bold"><%= pizza.price %></span>
                    <button data-pizza="<%=JSON.stringify(pizza)%>" class="add-to-cart flex px-3 py-1 rounded-full">
                        <span>+</span> <span class="ml-3">Add</span>
                    </button>
                </div>
            </div>
            </div>

            <% }) %>

        </div>
    </section>