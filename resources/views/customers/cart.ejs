<section class="cart">
    <%if(cartItems){%>
    <div class="container w-2/3 mx-auto py-16 ">
        <div class="flex items-center pb-2 border-b-2">
            <img src="/img/cart-black.png" alt="cart-image">
            <span class="text-xl font-bold ml-3"> Order Summary</span>
        </div>
        <%cartItems.forEach(i=>{%>
        <div class="flex items-center mt-4 pb-5 border-b-2">
            <div class="flex flex-1 items-center">
                <img class="w-24" src="/img/<%=i.item.image%>" alt="Item-image">
                <div class="item-details ml-4">
                    <h1 class=""><%=i.item.name%></h1>
                    <span class="text-gray text-xs/[3px] mt-2 m-1 uppercase block"><%=i.item.size%></span>
                </div>
            </div>
            <span class="flex-1 text-center"><%=i.qty%> Pcs</span>
            <span class="font-bold text-lg">$<%=i.item.price * i.qty%></span>
        </div>

        <%})%>

        <div class="flex flex-col items-end py-4">
            <div class="">
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2">$<%= cartTotal %></span>
            </div>
            <%if(session.token) { %>
            <form action="/order" method="POST" class="mt-12 flex flex-col items-end w-80">
                <%- include('../partials/errors') %>
                <input name="phone" class=" mb-4 border-2 p-2 w-full" type="text" placeholder="Phone no.">
                <textarea name="address" rows="3" class="block w-full border-2 p-2 text-gray-900 mb-4" placeholder="Address"></textarea>
                <div>
                    <button class="btn-primary text-white px-6 py-2 font-bold rounded-full">Order Now</button>
                </div>
            </form>
            <%} else {%>
            <div class="mt-2">
                <a href="/login" class="btn-primary cursor-pointer inline-block font-bold text-white px-6 py-2 rounded-full">Login to continue</a>
            </div>
            <% } %>
        </div>
    </div>

    <%}else{%>

    <div class="empty-cart py-12">
        <div class="container text-center ">
            <h1 class="text-3xl font-bold"> Cart Empty ðŸ¤¨ </h1>
            <p class="text-gray-500 text-lg m-4">
                Not Ordered Yet!!!<br>
                TRY Our Best Pizza's with best ofers for you.<br>
                To order go to the main page
            </p>
            <img class="w-2/4 mx-auto" src="/img/empty-cart.png" alt="cart-image">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white
            font-bold mt-12">
            Go Back</a>
        </div>
    </div>

    <%}%>

</section>